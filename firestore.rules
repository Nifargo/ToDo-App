rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Users collection - users can only read/write their own data
    match /users/{userId} {
      // Allow read/write only if:
      // 1. User is authenticated (request.auth != null)
      // 2. userId in document matches auth.uid
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Tasks collection - users can only read/write their own tasks
    match /tasks/{taskId} {
      // Allow read if user is authenticated and task.userId == auth.uid
      allow read: if request.auth != null &&
                     resource.data.userId == request.auth.uid;

      // Allow update/delete if user is authenticated and task.userId == auth.uid
      allow update, delete: if request.auth != null &&
                               resource.data.userId == request.auth.uid;

      // Allow create only if:
      // 1. User is authenticated
      // 2. New task.userId matches auth.uid
      allow create: if request.auth != null &&
                       request.resource.data.userId == request.auth.uid;
    }

    // Notes collection - users can only read/write their own notes
    match /notes/{noteId} {
      // Allow read if user is authenticated and note.userId == auth.uid
      allow read: if request.auth != null &&
                     resource.data.userId == request.auth.uid;

      // Allow update/delete if user is authenticated and note.userId == auth.uid
      allow update, delete: if request.auth != null &&
                               resource.data.userId == request.auth.uid;

      // Allow create only if:
      // 1. User is authenticated
      // 2. New note.userId matches auth.uid
      allow create: if request.auth != null &&
                       request.resource.data.userId == request.auth.uid;
    }
  }
}