rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Users collection - users can only read/write their own data
    match /users/{userId} {
      // Allow read/write only if:
      // 1. User is authenticated (request.auth != null)
      // 2. userId in document matches auth.uid
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Tasks collection - users can only read/write their own tasks
    match /tasks/{taskId} {
      // Allow read if user is authenticated and task.userId == auth.uid
      allow read: if request.auth != null &&
                     resource.data.userId == request.auth.uid;

      // Allow update/delete if user is authenticated and task.userId == auth.uid
      allow update, delete: if request.auth != null &&
                               resource.data.userId == request.auth.uid;

      // Allow create only if:
      // 1. User is authenticated
      // 2. New task.userId matches auth.uid
      allow create: if request.auth != null &&
                       request.resource.data.userId == request.auth.uid;
    }

    // Notes collection - users can read/write their own notes AND shared notes
    match /notes/{noteId} {
      // Helper functions
      function isOwner() {
        return request.auth.uid == resource.data.userId;
      }

      function isSharedUser() {
        return request.auth.uid in resource.data.get('sharedWith', []);
      }

      function canAccess() {
        return isOwner() || isSharedUser();
      }

      // READ: owner OR in sharedWith array
      allow read: if request.auth != null && canAccess();

      // UPDATE: owner OR shared user
      // But only owner can modify sharedWith array
      allow update: if request.auth != null && canAccess() &&
                       (isOwner() ||
                        request.resource.data.sharedWith == resource.data.sharedWith);

      // DELETE: ONLY owner can delete
      allow delete: if request.auth != null && isOwner();

      // CREATE: authenticated, userId = auth.uid, sharedWith must be array
      allow create: if request.auth != null &&
                       request.resource.data.userId == request.auth.uid &&
                       request.resource.data.sharedWith is list;
    }
  }
}